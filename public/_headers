# Cloudflare Pages Headers
# https://developers.cloudflare.com/pages/platform/headers/

# HTML pages - short cache with stale-while-revalidate
# (covers index.html, /article/*/index.html, /context/*/index.html)
/*.html
  Cache-Control: public, max-age=30, stale-while-revalidate=3600, stale-if-error=10800

/article/*
  Cache-Control: public, max-age=30, stale-while-revalidate=3600, stale-if-error=10800

/context/*
  Cache-Control: public, max-age=30, stale-while-revalidate=3600, stale-if-error=10800

# Static assets - immutable (content-hash in filename)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Fonts - long cache
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

