{
  "name": "vibegui.com",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "pages:build": "cp -r content dist/ && cp -r context dist/",
    "mcp:dev": "bun --watch main.ts",
    "mcp:serve": "bun main.ts",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "oxlint --ignore-pattern dist/",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "test": "bun test",
    "test:e2e": "playwright test",
    "test:constraints": "bun test tests/constraints/",
    "precommit": "bun run fmt && bun run lint && bun run check && bun run build && bun run test:constraints && bun run test:e2e",
    "prepare": "command -v lefthook >/dev/null 2>&1 && lefthook install || true"
  },
  "mcp": {
    "scripts": {
      "dev": {
        "description": "Start the Vite development server",
        "expose": true
      },
      "build": {
        "description": "Run production build",
        "expose": true
      },
      "preview": {
        "description": "Preview the production build locally",
        "expose": true
      },
      "check": {
        "description": "Run TypeScript type checking",
        "expose": true
      },
      "lint": {
        "description": "Run linter (oxlint)",
        "expose": true
      },
      "fmt": {
        "description": "Format code with Biome",
        "expose": true
      },
      "fmt:check": {
        "description": "Check code formatting without fixing",
        "expose": true
      },
      "test": {
        "description": "Run all unit tests",
        "expose": true
      },
      "test:e2e": {
        "description": "Run E2E browser tests with Playwright",
        "expose": true
      },
      "test:constraints": {
        "description": "Run constraint verification tests (build size, images, cache)",
        "expose": true
      },
      "precommit": {
        "description": "Run all pre-commit checks (format, lint, typecheck, build, tests)",
        "expose": true
      }
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.49.1",
    "@tailwindcss/vite": "^4.1.3",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.4.1",
    "bun-types": "^1.3.5",
    "gray-matter": "^4.0.3",
    "lefthook": "^1.10.10",
    "marked": "^15.0.7",
    "oxlint": "^0.16.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.3",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "vite-plugin-imagemin": "^0.6.1",
    "zod": "^3.25.76"
  },
  "optionalDependencies": {
    "@decocms/bindings": "1.0.1-alpha.23",
    "@decocms/runtime": "1.0.0-alpha.39",
    "@modelcontextprotocol/sdk": "1.20.2"
  }
}
