{
  "name": "vibegui.com",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "bin": {
    "vibegui-mcp": "./server/cli.ts"
  },
  "scripts": {
    "dev": "bun scripts/build.ts --mode=dev",
    "build": "bun scripts/build.ts --mode=prod",
    "preview": "bun scripts/preview-server.ts",
    "preview:build": "bun run build && bun run preview",
    "pages:build": "node --no-warnings --experimental-strip-types scripts/build.ts --mode=pages",
    "mcp:stdio": "bun server/stdio.ts",
    "mcp:stdio:dev": "bun --watch server/stdio.ts",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "oxlint --ignore-pattern dist/",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "test": "bun test",
    "test:e2e": "playwright test",
    "test:constraints": "bun test tests/constraints/",
    "precommit": "bun run fmt && bun run lint && bun run check && bun run build && bun run test:constraints && bun run test:e2e",
    "prepare": "command -v lefthook >/dev/null 2>&1 && lefthook install || true",
    "optimize:images": "bun scripts/optimize-images.ts",
    "backup": "bun scripts/backup-supabase.ts",
    "restore": "bun scripts/restore-supabase.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.49.1",
    "@tailwindcss/vite": "^4.1.3",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.4.1",
    "bun-types": "^1.3.5",
    "gray-matter": "^4.0.3",
    "lefthook": "^1.10.10",
    "marked": "^15.0.7",
    "oxlint": "^0.16.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "vite-plugin-imagemin": "^0.6.1",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.25.1"
  },
  "optionalDependencies": {
    "@decocms/bindings": "1.0.1-alpha.23",
    "@decocms/runtime": "1.0.0-alpha.39",
    "@modelcontextprotocol/sdk": "1.25.1",
    "@types/plist": "^3.0.5",
    "plist": "^3.1.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "postgres": "^3.4.7"
  }
}
