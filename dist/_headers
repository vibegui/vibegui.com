# Cloudflare Pages Headers
# https://developers.cloudflare.com/pages/platform/headers/

# HTML - short cache, stale-while-revalidate for instant loads
/index.html
  Cache-Control: public, max-age=30, stale-while-revalidate=3600, stale-if-error=10800

/*.html
  Cache-Control: public, max-age=30, stale-while-revalidate=3600, stale-if-error=10800

# Static assets - immutable, long cache (content-hash in filename)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Content (articles, manifest) - medium cache
# Cloudflare-CDN-Cache-Control forces CF edge to cache JSON files
/content/*
  Cache-Control: public, max-age=360, stale-while-revalidate=86400
  Cloudflare-CDN-Cache-Control: max-age=360

# Fonts - long cache
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

